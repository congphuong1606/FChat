<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.phuongcong.fchat.ui.chat.FChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:windowSoftInputMode="adjustPan|adjustResize">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
             android:id="@+id/rll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1E1E1"
                android:orientation="horizontal"
                android:padding="7dp"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnSoundChat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:background="@drawable/ic_voice" />


                <Button
                    android:id="@+id/btnStickChat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_emoticon" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnChoosePhoto"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_image" />


                <EditText
                    android:id="@+id/edtInputMsg"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.98"
                    android:background="@drawable/rounded_edittext"
                    android:hint="nhập nội dung tin nhắn"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:windowSoftInputMode="stateAlwaysVisible" />

                <Button
                    android:id="@+id/btnSendchat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_send" />
            </LinearLayout>

            <include
                android:id="@+id/listImage"
                layout="@layout/item_list_image"
                android:visibility="gone">
            </include>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
