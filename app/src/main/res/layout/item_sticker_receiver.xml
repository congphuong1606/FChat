<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_8"
    android:paddingRight="@dimen/material_40">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_receiver"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/img_sticker_receiver"
        android:layout_width="@dimen/sp_sticker_item_size"
        android:layout_height="@dimen/sp_sticker_item_size"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/material_48"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/txt_time_sticker_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_sticker_receiver"
        android:layout_marginBottom="@dimen/material_8"
        android:layout_marginLeft="@dimen/material_48"
        android:gravity="left"
        android:text="Today, 9.18"
        android:textSize="@dimen/text_12" />
</RelativeLayout>