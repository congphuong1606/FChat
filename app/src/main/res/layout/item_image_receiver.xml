<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_5dp"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_receive"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <GridView
            android:id="@+id/gr_list_image_receive"
            android:layout_width="@dimen/dimen_110dp"
            android:layout_height="@dimen/dimen_110dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:numColumns="2"
            android:paddingBottom="@dimen/dimen_10dp"></GridView>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_time_receicver_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_70dp"
        android:text="@string/time" />
</LinearLayout>