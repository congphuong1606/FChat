<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ece9e9"
    android:orientation="vertical">
    <TextView
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:gravity="left"
        android:textColor="#15318c"
        android:text="Thay đổi mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/oldPass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_edittext_top"
            android:hint="mật khẩu hiện tại"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_edittext_center"
            android:hint="Mật khẩu mới"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/repeatNewPass"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:background="@drawable/rounded_edittext_bottom"
            android:hint="Gõ lại mật khẩu mới"
            android:paddingLeft="10dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnOkChangPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:text="Lưu thay đổi"
        android:textAllCaps="false"
        android:textColor="#15318c" />

    <Button
        android:id="@+id/btnCancelChangPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_edittext"
        android:text="Hủy"
        android:textAllCaps="false"
        android:textColor="#fc0101" />


</LinearLayout>