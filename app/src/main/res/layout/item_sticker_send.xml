<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_40"
    android:paddingRight="@dimen/material_8">

    <LinearLayout
        android:id="@+id/llms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sticker_send"
            android:layout_width="@dimen/sp_sticker_item_size"
            android:layout_height="@dimen/sp_sticker_item_size"
            android:layout_alignParentTop="true"
            android:scaleType="fitStart" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_sticker_send"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_play" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_time_sticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llms"
        android:layout_marginBottom="@dimen/material_8"
        android:layout_marginRight="@dimen/material_8"
        android:gravity="right"
        android:text="Today, 9.18"
        android:textSize="@dimen/text_12" />
</RelativeLayout>